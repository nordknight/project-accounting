<% provide(:title, 'Post') %>
<p id="notice"><%= notice %></p>

<h2>Post #<%= @post.id %></h2>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

<div class="span8">
    <% if @post.comments.any? %>
      <h3>Comments (<%= @post.comments.count %>)</h3>
      <ol class="microposts">
        <%= render @comments %>
      </ol>
      <%= will_paginate @comments %>
    <% end %>
  </div>


