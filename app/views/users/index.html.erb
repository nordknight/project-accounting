<p id="notice"><%= notice %></p>

<h1>Users</h1>

<%= will_paginate %>


<% n=0 %>
<ul class="users">
<table class="table">
  <thead>
    <tr>
      <th>#</th>
      <th>Email</th>
      <th>First name</th>
      <th>Last name</th>
      <% if current_user.admin? %>  
        <th>Role</th>
      <% end %>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= n=n+1 %></td>
        <td><%= user.email %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <% if current_user.admin?  %>
          <td>  
            <% if user.admin? %> 
              Administrator
              <% else %>
              User
            <% end %>      
          </td>
        <% end %>
        <td><%= link_to 'Show', user %></td>
        <% if current_user.admin? %>
          <td><%= link_to 'Edit', edit_user_path(user) %></td>        
          <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</ul>


<%= will_paginate %>

<br>

<%= link_to 'New User', new_user_path, class: "btn btn-large btn-primary" %>
